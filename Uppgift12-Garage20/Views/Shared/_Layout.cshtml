@inject IGarageContentService garageContentService
@{
    int NoOfSpacesAvailable = await garageContentService.NoOfSpacesAvailable();
}
<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Uppgift12_Garage20</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Uppgift12_Garage20.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-body-secondary border-bottom box-shadow mb-3 d-print-none">
            <div class="container">
                <a class="navbar-brand fw-bold text-uppercase" asp-area="" asp-controller="ParkedVehicles" asp-action="Index">Garage 2.0</a>
                <div class="hstack gap-2">
                    <a class="btn btn-primary d-sm-none" asp-area="" asp-controller="ParkedVehicles" asp-action="Park"><i class="bi-plus-lg"></i> Park Vehicle</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="ParkedVehicles" asp-action="Index">View Garage</a>
                        </li>
                    </ul>
                            @if (NoOfSpacesAvailable > 0)
                            {
                                <a class="btn btn-primary d-none d-sm-inline-block" asp-area="" asp-controller="ParkedVehicles" asp-action="Park"><i class="bi-plus-lg"></i> Park Vehicle</a>
                            } 
                            else
                            {
                                <a class="btn btn-primary d-none d-sm-inline-block disabled"><i class="bi-plus-lg"></i> Park Vehicle</a>
                            }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pt-2 pt-md-4 pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto p-2 text-center d-print-none">
        <div class="container">
            &copy; 2024 - Grupp 7 (Linda Hedvall,  Jareth Ian Holt, Mohammad Kassar, Abed Fetrat)
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
