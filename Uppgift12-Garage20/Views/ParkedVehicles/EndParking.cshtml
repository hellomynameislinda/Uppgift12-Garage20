@using System.Globalization
@model Uppgift12_Garage20.Models.ParkedVehicle

@{
    ViewData["Title"] = "End Parking";
}

<h1>End Parking</h1>

<h3>Are you sure you want to end the parking for this vehicle?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VehicleType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RegistrationNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegistrationNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Make)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Make)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfWheels)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfWheels)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArrivalTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArrivalTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalParkingTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalParkingTime)
        </dd>
    </dl>

    <form asp-action="EndParking">
        <input type="hidden" asp-for="ParkedVehicleId" />
        <div class="hstack gap-3 mb-4">
            <button type="submit" class="btn btn-danger"><i class="bi-x-lg"></i> End Parking</button>
            <a asp-action="Reciept" asp-route-id="@Model.ParkedVehicleId" class="btn btn-primary"><i class="bi-printer"></i> Print Reciept</a>
        </div>
        <a asp-action="Index" class="link-light"><i class="bi-chevron-left"></i> Back to Garage</a>
    </form>
</div>
